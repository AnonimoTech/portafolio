server {
    listen 80;
    server_name app.usinacreativa.ar www.app.usinacreativa.ar;
    return 301 https://$host$request_uri;
}

server {
    listen 443 ssl;
    server_name app.usinacreativa.ar www.app.usinacreativa.ar;

    ssl_certificate /etc/letsencrypt/live/app.usinacreativa.ar/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/app.usinacreativa.ar/privkey.pem;

    root /home/ubuntu/app/front/dist;
    index index.html;

    location / {
        try_files $uri $uri/ /index.html;
    }

    location /api/ {
        proxy_pass http://127.0.0.1:5000;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_cache_bypass $http_upgrade;
    }

    location /public/ {
        proxy_pass http://127.0.0.1:5000/public/;
    }
}
